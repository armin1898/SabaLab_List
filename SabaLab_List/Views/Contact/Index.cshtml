                                <a class="btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                                <a class="btn-danger btn-sm text-white" onclick="confirmDelete(@item.Id)"><i class="fa fa-trash"></i></a>

