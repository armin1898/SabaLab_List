@model SabaLab_List.ViewModels.LoginViewModels

@{
    ViewData["Title"] = "Login";
}
<div class="container" style="margin-top:5%;">
    @if (ViewData["ErrorMessage"] != null)
    {
        <div class="text-danger">@ViewData["ErrorMessage"]</div>
    }
    <form class="modal-content animate" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@ViewData["returnUrl"]" method="post">
        <div class="imgcontainer">
            <img src="~/Pic/user-286.jpg" alt="Avatar" class="avatar" />
            <h4>ورود به سایت </h4>
        </div>
        <div class="container">
            <div>
                <label>نام کاربر</label>
                <input asp-for="UserName" class="form-control" placeholder=" ادمین" />
                <span asp-validation-for="UserName" style="color:red"></span>
            </div>
            <div>
                <label>رمز عبور</label>
                <input asp-for="Password" class="form-control" placeholder="*****" />
                <span asp-validation-for="Password" style="color:red"></span>
            </div>

            <div style="display: -webkit-box; ">
                <input asp-for="RememberMe" />
                <label asp-for="RememberMe"></label>
                <span asp-validation-for="RememberMe"></span>
            </div>
            <button type="submit" class="btn btn-primary">ورود</button>
        </div>
    </form>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
